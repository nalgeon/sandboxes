{
    "run": {
        "engine": "docker",
        "entry": "main.go",
        "steps": [
            {
                "box": "go",
                "command": ["sh", "/sandbox/run.sh"],
                "timeout": 8
            }
        ]
    },
    "test": {
        "engine": "docker",
        "entry": "main_test.go",
        "steps": [
            {
                "box": "go",
                "command": ["sh", "/sandbox/test.sh"],
                "timeout": 8
            }
        ]
    },
    "test-verbose": {
        "engine": "docker",
        "entry": "main_test.go",
        "steps": [
            {
                "box": "go",
                "command": ["sh", "/sandbox/test.sh", "-v"],
                "timeout": 8
            }
        ]
    }
}
